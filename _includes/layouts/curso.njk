<!--POST-->
<div class="section ">
  <div class="container">
    <div class="row">
      <article class="col-lg-12">
        <header>
          <h1 class=" font-bold text-4xl text-gray-800">
            {{ title }}
          </h1>
          <br>
          <h6 class=" font-bold text-1xl text-gray-800" style="color:#46495F!important">
            {{ description }}
          </h6>
          <br>
          <div class=" text-sm text-gray-600 ">
            Autor:
              <span class="text-sm font-semibold text-gray-900 ml-2">
                <!--autor correo fecha-->
                    {{ autor }} | {{ correo }} | {{ date|dateFormat('DD/MM/YYYY')}}
              </span>
          </div>
          <br>
        </header>

        <style>
  
          @media (max-width: 760px){
              .presponsive{
                  padding-left: 0!important;
              }
          }
  
        </style>
        
        <section class="content text-justify">
            <div class="row">
                <div class="col-lg-9">
                    <div class="col-span-6 md:col-span-4 content-curso">
                    {{ content | safe }}
                    </div>
                    <!--div class="col-span-6 md:col-span-2 presponsive" style="padding-left: 3rem;">
                    <h6>Escucha nuestros podcasts</h6>
                    <div class="w-full">
                        {% if collections.podcasts %}
                        {% for podcast in collections.podcasts | reverse | limit(4) %}
                            <div class="block mb-4">
                            <iframe src="{{ podcast.data.link }}" width="100%"
                                height="152" frameBorder="0" allowfullscreen="" class="rifra"
                                allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
                            </div>
                        {% endfor %}
                        {% endif %}
                    </div>
                    </div-->  
                </div>
                <div class="col-lg-3">
                    <div class="row">
                        <h3 class="col-lg-12">Videos</h3>
                        <br>
                        {% for video in collections.videos | limit(3)%}
                            <div class="col-lg-12 cuadro_video">
                                {{video.data.link | safe}}
                                <p>{{video.data.descripcion}}</p>
                            </div>
                        {% endfor %}
                        <div class="col-lg-12 my-6" style="text-align:end">
                            <a class="btn" href="/videos/index.html">Ver todos los videos</a>
                        </div>
                    </div>
                </div>
            </div>

        </section>
        
      </article>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h2 class="font-bold text-xl border-b-2 border-yellow-500 mb-4 pb-4" style="border-color:#46495F">MÃ¡s Cursos</h2>
        </div>

            {% for curso in collections.cursos | reverse | limit(4)%}
            {% if page.url !== curso.url %}
            <div class="col-lg-4">

                <a href="{{ curso.url }}" class="flex border-b-2 pb-4 mb-4 text-current">
                    <img src="{{ curso.data.image }}" alt="Evento" class="w-36 mb-2">
                    <div class="pl-8 my-auto">
                    <h5 class="font-bold text-lg">
                        {{ curso.data.title }}
                    </h5>
                    <span class="text-sm">
                        {{ curso.data.description }} 
                    </span>
                    </div>
                </a>

            </div>
            {% endif %}
            {% endfor %}

    </div>
  </div>
</div>

{% endblock %}