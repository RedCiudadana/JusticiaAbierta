---
pagination:
  data: collections.propuestas
  size: 12
  alias: propuestas
permalink: "propuestas/page-{{ pagination.pageNumber + 1}}/index.html"
---

{% extends "src/base.njk" %}

{% block head %}
<title>Propuestas Justicia Abierta | Red Ciudadana</title>
<link rel="stylesheet" href="/css/main.css" type="text/css" />
{% endblock %}

{% block content %}
    <div class="section m-0 py-6" style="background-image:url('/ELEMENTOS/ELEMENTOS MEJORAS_JA/SLIDER SECCIONES/JA-29.png');background-repeat: no-repeat;background-size: 100% 100%;">
        <div class="container">
            <div class="row my-6 py-6">
                <div class="col-lg-12">

                    <div class="my-6" style="text-align:center">
                        <img style="padding:15px" src="/ELEMENTOS/ELEMENTOS MEJORAS_JA/ICONOS/JA-26.png">
                        <h3 class="text-white" style="font-size:35px">Propuestas Ciudadanas</h3>
                        <p class="text-white">Te invitamos a filtrar y encontrar propuestas
                            ciudadanas en las siguientes áreas
                        </p>
                        <br>
                        <a class="btn" href="/nuevapropuesta/index.html">Crear nueva propuesta</a>
                    </div>

                </div>
            </div>
        </div>
    </div>

     <!-- propuestas -->
    <div class="section my-6">
        <div class="container">
            <div class="row ">

                {% set cuenta = 0 %}
                {% for propuesta in collections.propuestas%}
                {% set cuenta = cuenta + 1 %}
                {% endfor %}

                <div class="col-lg-12 my-4 text-center"> 
                    
                    {% if cuenta == 1%}
                    <h3>Tenemos <span class="conteo">{{cuenta}}</span> Propuesta Ciudadana</h3>
                    {% endif %}
                    {% if cuenta != 1%}
                    <h3>Tenemos <span class="conteo">{{cuenta}}</span> Propuestas Ciudadanas</h3>
                    {% endif %}
                    <h5>Te invitamos a filtrar y encontrar propuestas
                        ciudadanas en las siguientes áreas
                    </h5>
                </div>
                

                <div class="col-lg-12 my-4"> 
                    <!--coleccion de filtros-->
                    <div class="row">
                        {% for categoria in collections.categorias %}
                        <a href="{{categoria.url}}" class="filtros my-1">{{categoria.data.title}}</a>
                        {% endfor %}
                    </div>
                </div>

                {% for prop in propuestas %}
                    {% if prop.data.propuestas.encuentro == "Si" %}

                    <div class="col-lg-4 my-4">
                        <div class="cuadro_propuesta">
                            <div class="tags">
                                <a href="/categorias/{{prop.data.propuestas.categoria | slug}}" class="filtros">{{prop.data.propuestas.categoria}}</a>
                            </div>
                            <div class="numero_propuesta">
                                <p>propuesta N.{{prop.data.propuestas.numero_propuesta}}</p>
                            </div>
                            <div class="contenido">
                                <h5>{{prop.data.propuestas.titulo}}</h5>
                                <p>{{prop.data.propuestas.resumen}}</p>
                            </div>
                            <div class="bottom">
                                <!--div class="candidaturas">
                                    <h4>4</h4>
                                    <span>candidatura(s) comprometida(s)</span>
                                </div>
                                <div class="ciudadanos">
                                    <h4>20</h4>
                                    <span>apoyo(s) ciudadano(s)</span>
                                </div-->
                                <div class="botones_finales">
                                    <!--a href="#" class="apoyar"><i class="fa-solid fa-heart" style="margin-right:4px"></i>Apoyar</a-->
                                    <a href="{{prop.url}}" class="vermas">Leer más</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    {% endif %}

                    {% if prop.data.propuestas.encuentro == "No" %}

                    <div class="col-lg-4 my-4">
                        <div class="cuadro_propuesta">
                            <div class="tags">
                                <a href="/categorias/{{prop.data.propuestas.categoria | slug}}" class="filtros">{{prop.data.propuestas.categoria}}</a>
                            </div>
                            <div class="numero_propuesta">
                                <p>propuesta N.{{prop.data.propuestas.numero_propuesta}}</p>
                            </div>
                            <div class="contenido">
                                <h5>{{prop.data.propuestas.titulo}}</h5>
                                <p>{{prop.data.propuestas.resumen}}</p>
                            </div>
                            <div class="bottom">
                                <!--div class="candidaturas">
                                    <h4>4</h4>
                                    <span>candidatura(s) comprometida(s)</span>
                                </div>
                                <div class="ciudadanos">
                                    <h4>20</h4>
                                    <span>apoyo(s) ciudadano(s)</span>
                                </div-->
                                <div class="botones_finales">
                                    <!--a href="#" class="apoyar"><i class="fa-solid fa-heart" style="margin-right:4px"></i>Apoyar</a-->
                                    <a href="{{prop.url}}" class="vermas">Leer más</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    {% endif %}

                {% endfor %}

                <div class="col-lg-12">
                    <div class="row justify-content-center">
                        <div class="pagination my-4">
                            <ul>
                                <li>{% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">←</a>{% else %}<a style="pointer-events:none" href="{{ pagination.href.previous }}">←</a>{% endif %}</li>

                                
                                {%- for pageEntry in pagination.pages %}

                                <li><a href="{{ pagination.hrefs[ loop.index0 ] }}"{% if page.url == pagination.hrefs[ loop.index0 ] %} aria-current="page"{% endif %}>{{ loop.index }}</a></li>
                                {%- endfor %}
                                
                                
                                <li>{% if pagination.href.next %}<a href="{{ pagination.href.next }}">→</a>{% else %}<a style="pointer-events:none" href="{{ pagination.href.next }}">→</a>{% endif %}</li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    
{% endblock %}