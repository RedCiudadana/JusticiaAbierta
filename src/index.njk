    <!-- propuestas -->
    <div class="section m-0">
        <div class="container py-6">
            <div class="row">
                <div class="col-lg-12">

                    <div style="text-align:center">
                        <h3>Propuestas Ciudadanas</h3>
                        <p>Te invitamos a filtrar y encontrar propuestas
                            ciudadanas en las siguientes áreas
                        </p>
                    </div>

                </div>

                <div class="col-lg-12 my-4"> 
                    <!--coleccion de filtros-->
                    <div class="row">
                        {% for categoria in collections.categorias %}
                        <a href="{{categoria.url}}" class="filtros my-1">{{categoria.data.title}}</a>
                        {% endfor %}
                    </div>
                </div>

                {% for prop in collections.propuestas | limit(3) %}
                    {% if prop.data.propuestas.encuentro == "Si" %}

                    <div class="col-lg-4 my-4">
                        <div class="cuadro_propuesta">
                            <div class="tags">
                                <a href="/categorias/{{prop.data.propuestas.categoria | slug}}" class="filtros">{{prop.data.propuestas.categoria}}</a>
                            </div>
                            <div class="numero_propuesta">
                                <p>propuesta N.{{prop.data.propuestas.numero_propuesta}}</p>
                            </div>
                            <div class="contenido">
                                <h5>{{prop.data.propuestas.titulo}}</h5>
                                <p>{{prop.data.propuestas.resumen}}</p>
                            </div>
