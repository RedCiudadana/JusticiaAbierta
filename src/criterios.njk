    <!-- Expedientes -->
    <div class="section m-0" style="background-color: #f1f5fd">
        <div class="container py-4">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <h4>Expedientes por Criterios y Jurisprudencia</h4>
                    <br><br>
                    <div class="table-container">
                        <div class="table-header">
                            <div class="table-cell" style="flex:0.3"></div>
                            <div class="table-cell">No. de Expediente</div>
                            <div class="table-cell">Criterios y Jurisprudencia</div>
                            <div class="table-cell justify-content-center">PDF</div>
                            <div class="table-cell justify-content-center">WORD</div>
                        </div>
                        <div class="table-body">
                            {% for expediente in expedientes %}
                            <div class="table-row" id="row-{{ expediente.no_expediente }}">
                                <div class="table-cell" style="flex:0.3">
                                    <img style="height:50px" src="/ELEMENTOS/logocongreso.png" alt="Logo Congreso"/>
                                </div>
                                <div class="table-cell no-expediente">{{ expediente.no_expediente }}</div>
                                <div class="table-cell criterios">{{ expediente.criterios_reiterados }}</div>
                                <div class="table-cell" style="display:block;text-align:center">
                                    <a href="{{ expediente.pdf }}" class="btn btn-red">Descarga el pdf <i class="fa-solid fa-caret-right"></i></a>
                                </div>
                                <div class="table-cell" style="display:block;text-align:center">
                                    <a href="{{ expediente.word }}" class="btn">Descarga el word <i class="fa-solid fa-caret-right"></i></a>
                                </div>
                            </div>  
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- videos -->
    <div class="section m-0" style="background-color: #fff">
        <div class="container py-6">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="cuadro_final">
