                document.getElementById('result11').innerHTML = resultHTML11;
                document.getElementById('result12').innerHTML = resultHTML12;
                document.getElementById('result13').innerHTML = resultHTML13;
                document.getElementById('result14').innerHTML = resultHTML14;
                document.getElementById('result15').innerHTML = resultHTML15;
                document.getElementById('result16').innerHTML = resultHTML16;
                document.getElementById('result17').innerHTML = resultHTML17;
                document.getElementById('result18').innerHTML = resultHTML18;
                document.getElementById('result19').innerHTML = resultHTML19;
            }).catch(function(error) {
