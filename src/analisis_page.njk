                let resultHTML8 = '';
                let resultHTML9 = '';
                let resultHTML10 = '';
                let resultHTML11 = '';
                let resultHTML12 = '';
                let resultHTML13 = '';
                let resultHTML14 = '';
                let resultHTML15 = '';
                let resultHTML16 = '';
                let resultHTML17 = '';
                let resultHTML18 = '';
                let resultHTML19 = '';

                if (corte) {
                    resultHTML2 += `<p><strong>1. Institución:</strong>  CORTE ${corte[1].trim()}</p>`;
                    resultHTML2 = '<img src="/ELEMENTOS/cc.jpg" class="img-cc">';
                    resultHTML3 += `La Corte de Constitucionalidad (CC) (oficialmente La Honorable Corte de Constitucionalidad de la República de Guatemala) es el tribunal permanente de jurisdicción privativa, cuya función esencial es la defensa del orden constitucional. Además actúa como Tribunal Extraordinario de Amparo.`
                } else {
