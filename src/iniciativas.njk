                        <div class="texto_cuadro">
                            <h3>{{iniciativa.data.title}}</h3>
                            <p>{{iniciativa.data.descripcion}}</p>
                            <br>
                            <a href="{{iniciativa.data.link}}" class="ver_todo">MÃ¡s info</a>
                        </div>
                    </div>
                </div>
                {% endfor %}

            </div>
        </div>
    </div>

{% endblock %}
