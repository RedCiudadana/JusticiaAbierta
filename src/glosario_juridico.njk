{% extends "src/base.njk" %}

{% block head %}
<title>Justicia Abierta | Glosario Jurídico</title>
<link rel="stylesheet" href="/css/main.css" type="text/css" />
{% endblock %}

{% block content %}
    <div class="section m-0 py-6" style="background-image:url('/ELEMENTOS/ELEMENTOS MEJORAS_JA/SLIDER/JA-18.png');background-repeat: no-repeat;background-size: 100% 100%;">
        <div class="container">
            <div class="row my-6 py-6">
                <div class="col-lg-6 d-flex" style="align-items:center">
                    <div class="my-6" style="text-align:left">
                        <h3 class="text-white notranslate" style="font-size:40px; margin-bottom:5px">Glosario Jurídico del Lenguaje Claro</h3>
                        <h3 class="text-white" style="font-size:24px;font-weight:400;line-height:32px">Glosario Jurídico</h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="my-6" style="text-align:center">
                        <img style="padding:15px" src="/ELEMENTOS/ELEMENTOS WEB/01_SLIDER/SLIDER_02.png">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Seccion -->
    <div class="section m-0" style="background-color:#f1f5fd">
        <div class="container py-6">
            <div class="row ">
            
                <div class="col-lg-12 my-4">
                    <div class="row">
                        <h2 class="text-left">Glosario Jurídico</h2>
                        <br>
                        {% for glos in collections.glosario_juridico%}
                        <div class="col-lg-12 d-flex my-4">
                            <div class="row">
                                <div class="col-lg-3 p-0">
                                    <img src="/ELEMENTOS/08_GRAFICAS/placeholder.png">
                                </div>
                                <div class="col-lg-9 p-0">
                                    <div class="mx-4">
                                        <h4 class="text-left">{{glos.data.title}}</h4>
                                        <p>{{glos.data.descripcion}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                
            </div>
        </div>
    </div>
{% endblock %}